<div class="subform">
<div class="page">
<form method="post" action="/bookpost">
	<p>Your Name:</p> <input type="text" name="youname" /></p>
	<p>Your Site:</p><input type="text" name="youlink" /></p>
	<p>Title: <input type="text" name="title" /></p>
	<p>Author: <input type="text" name="author" /></p>
	<p>Description:</p>
	<textarea name="description"></textarea><br>
	<p>Image URL: <input type="text" name="imgurl" /></p>
	<p>Shopping link: <input type="text" name="shopurl" /></p>
	<p>Best time/place/occasion to read this:</p>
	<textarea name="readingsitch"></textarea><br>
	<input type="submit" class="submitbutton"/>
</form>
</div>
</div>

<div class="displayboard">
{{#each bookposts}}
<div class="page">
	<p>submitted by <a href="{{youlink}}" target="_blank">{{youname}}</a></p>
	<p><em>{{title}}</em> by {{author}}</p>
	<p><a href="{{shopurl}}" target="_blank"><img src="{{imgurl}}" class="displayimg"/></a></p>
	<p>{{description}}</p>
	<p>When/where to read this book:</p>
	<p>{{readingsitch}}</p>
	</div>
{{/each}}
</div>

